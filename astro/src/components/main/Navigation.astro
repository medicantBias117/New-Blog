---
interface Props {
  activeItem: string;
  navMenu: [
    {
      navLink: string;
      navTitle: string;
    },
  ];
}
const { activeItem, navMenu } = await Astro.props;

const uri = Astro.url.pathname;
---

<nav>
  <ul class="flex flex-row justify-start gap-5">
    {
      !navMenu
        ? ""
        : navMenu.map((item) => {
            let showActive = false;

            if (uri == item.navTitle) {
              showActive = true;
            }
            return (
              <li>
                <a
                  class:list={[
                    "not-italic",
                    "fancy-blur",
                    { active: showActive },
                  ]}
                  href={item.navLink}
                >
                  {item.navTitle}
                </a>
              </li>
            );
          })
    }
  </ul>
</nav>

<style>
  a.active {
    text-decoration: underline;
    text-underline-offset: 5px;
    font-weight: 600;
  }
</style>
