---
interface Props {
  activeItem: string;
}
const { activeItem } = Astro.props;

const navItems = ["About", "Articles", "Notes", "Series"];
const navLinks = ["/about", "/articles", "/notes", "/series/"];
const uri = Astro.url.pathname;
---

<nav>
  <ul class="flex flex-row justify-start gap-5">
    {
      navItems.map((item, index) => {
        let showActive = false;

        if (uri == navLinks[index]) {
          showActive = true;
        }
        return (
          <li>
            <a
              class:list={["not-italic", "fancy-blur", { active: showActive }]}
              href={navLinks[index]}
            >
              {item}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>

<style>
  a.active {
    text-decoration: underline;
    text-underline-offset: 5px;
    font-weight: 600;
  }
</style>
